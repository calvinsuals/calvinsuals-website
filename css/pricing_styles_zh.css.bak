    /* .pricing-card { padding: 25px 20px; } */
    .cta-button { max-width: 250px; font-size: 0.9rem; padding: 10px 20px; }

    /* Adjust card size and padding for small mobile */
    .pricing-card {
        max-width: 300px;
        min-height: 180px; /* 减少最小高度 */
        padding: 10px; /* 减少内边距 */
    }

    /* Ensure card-top is in row 1 */
    .card-top {
        grid-row: 1;
        margin-left: -2px; /* 向左移动2px */
        margin-top: -4px; /* 向上移动4px */
    }
    /* Ensure card-features is in row 2 */
    .card-features {
        grid-row: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 0 15px 0; /* 恢复手机端的内边距 */
        margin-bottom: 5px; /* 保持底部外边距 */
        margin-top: 0; /* 重置上边距，覆盖电脑端的负边距 */
    }

    /* 调整card-features中的列表项 */
    .card-features ul {
        margin-bottom: 5px; /* 增加列表底部间距 */
    }

    .card-features li {
        margin-bottom: 3px; /* 减小列表项间距，整体更紧凑 */
    }

    /* Ensure card-bottom is in row 3 and aligned to bottom */
    .card-bottom {
        grid-row: 3;
        display: block;
        position: absolute; /* 使用绝对定位 */
        width: calc(100% - 20px); /* 考虑减少的卡片内边距 */
        bottom: 4px; /* 轻微上移底部区域 */
        left: 10px; /* 对应减少的左边距 */
        right: 10px; /* 对应减少的右边距 */
        margin: 0; /* 移除所有边距 */
        padding: 0; /* 移除所有内边距 */
        z-index: 2; /* 低于CTA文本 */
    }

    .card-name {
        margin-bottom: 4px; /* Reduced space */
    }

    /* 调整小屏幕下的CTA文本 */
    .card-cta {
        font-size: 6px;
        position: absolute; /* 保持绝对定位 */
        bottom: 3px; /* 调整底部位置 */
        left: 0;
        right: 0;
        margin: 0; /* 移除所有边距 */
        z-index: 10 !important; /* 确保在移动端也有最高层级 */
    }

    /* 确保card-bottom不会遮挡CTA文本 */
    .card-bottom {
        z-index: 2; /* 低于CTA文本 */
    }

    /* 进一步减少小屏幕下标签的边距 */
    .card-top span {
        margin-top: 2px;
        margin-left: 2px;
        font-size: 12px; /* 保持较小字体大小 */
    }

