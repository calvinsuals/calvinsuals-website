    .modal-body::-webkit-scrollbar { 
        display: none; /* 与PC端保持一致 */ 
    }
    
    /* Terms模态窗口滚动条样式 */
    #modal-terms .modal-body::-webkit-scrollbar { 
        width: 6px; /* 与PC端保持一致 */
    }
    #modal-terms .modal-body::-webkit-scrollbar-thumb { 
        background-color: rgba(255, 255, 255, 0.3); /* 与PC端保持一致 */
        border-radius: 3px; 
    }
    #modal-terms .modal-body::-webkit-scrollbar-thumb:hover { 
        background-color: rgba(255, 255, 255, 0.5); /* 与PC端保持一致 */
    }
} 